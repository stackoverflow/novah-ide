{
    "name": "novah-ide",
    "displayName": "Novah IDE",
    "description": "Integrated development environment for the Novah language",
    "version": "0.0.1",
    "author": "Islon Scherer",
    "publisher": "rarestorm",
    "repository": {
        "type": "git",
        "url": "https://github.com/stackoverflow/novah-ide"
    },
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:novah"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "novah",
                "aliases": [
                    "Novah",
                    "novah"
                ],
                "extensions": [
                    ".novah"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "novah",
                "scopeName": "source.novah",
                "path": "./syntaxes/novah.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "novah",
                "path": "./snippets/novah.json"
            }
        ],
        "configuration": {
            "title": "Novah IDE",
            "properties": {
                "novah.path": {
                    "type": "string",
                    "default": null,
                    "description": "Path to Novah executable"
                }
            }
        },
        "taskDefinitions": [
            {
                "type": "novah",
                "required": [
                    "task"
                ],
                "properties": {
                    "task": {
                        "type": "string",
                        "description": "The task to run",
                        "default": "build",
                        "oneOf": [
                            {
                                "type": "string",
                                "enum": [
                                    "build",
                                    "run",
                                    "test"
                                ]
                            }
                        ]
                    }
                }
            }
        ],
        "problemMatchers": [
            {
                "applyTo": "allDocuments",
                "label": "novah error",
                "name": "novah error",
                "severity": "error",
                "source": "novah compiler",
                "pattern": [
                    {
                        "regexp": "^module [\\w+\\.?]+\\nat (.+?(?=:)):(\\d+):(\\d+) - (\\d+):(\\d+)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "message": 1
                    }
                ]
            }
        ]
    },
    "scripts": {
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ..",
        "package": "vsce package",
        "install-ext": "code --install-extension novah-ide-0.0.1.vsix"
    },
    "devDependencies": {
        "@types/node": "^14.14.31",
        "typescript": "^4.3.5"
    }
}
