{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["#{", "}"],
        ["`", "`"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["#{", "}"],
        ["`", "`"],
        ["\"", "\""],
        ["'", "'"],
        ["\"\"\"", "\"\"\""]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["#{", "}"],
        ["`", "`"],
        ["\"", "\""],
        ["'", "'"],
        ["\"\"\"", "\"\"\""]
    ],
    "onEnterRules": [
        {
            "beforeText": "^.*(?:=|do|->)\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s+\\*.*$",
            "action": {
                "indent": "none",
                "appendText": "* "
            }
        }
    ]
}